<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tarikachawla.productflavor.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/textview"
            android:id="@+id/kevinName"
            android:textStyle="bold"/>

        <ImageView
            style="@style/image"
            android:id="@+id/kevinImage"/>

        <TextView
            style="@style/textview"
            android:textStyle="bold"
            android:text="@string/descText"/>

        <TextView
            style="@style/textview"
            android:id="@+id/kevinDescription"
            android:paddingBottom="20dp"/>


        <TextView
            style="@style/textview"
            android:id="@+id/bobName"
            android:textStyle="bold" />

        <ImageView
            style="@style/image"
            android:id="@+id/bobImage"/>

        <TextView
            style="@style/textview"
            android:textStyle="bold"
            android:text="@string/descText"/>

        <TextView
            style="@style/textview"
            android:id="@+id/bobDescription"/>
    </LinearLayout>

</ScrollView>